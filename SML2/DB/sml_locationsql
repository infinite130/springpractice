-- 병원
CREATE TABLE HOSPITAL (
    HPT_CODE INT PRIMARY KEY NOT NULL,
    HPT_NAME VARCHAR2(100),
    HPT_ADDR VARCHAR2(255),
    HPT_TEL VARCHAR2(20),
    HPT_LAT NUMBER(9,6),
    HPT_LON NUMBER(9,6),
    HTYPE_CODE INT NOT NULL,
    FOREIGN KEY (HTYPE_CODE) REFERENCES HOSPITAL_TYPE(HTYPE_CODE)
);

-- 병원종류
CREATE TABLE HOSPITAL_TYPE (
    HTYPE_CODE INT PRIMARY KEY NOT NULL,
    HTYPE_NAME VARCHAR2(50)
);

-- 관공서
CREATE TABLE PUBLIC_OFFICE (
    POF_CODE INT PRIMARY KEY NOT NULL,
    POF_NAME VARCHAR2(100),
    POF_ADDR VARCHAR2(255),
    POF_TEL VARCHAR2(20),
    POF_LAT NUMBER(9,6),
    POF_LON NUMBER(9,6),
    PTYPE_CODE INT NOT NULL,
    FOREIGN KEY (PTYPE_CODE) REFERENCES OFFICE_TYPE(PTYPE_CODE)
);

-- 관공서종류
CREATE TABLE OFFICE_TYPE (
    PTYPE_CODE INT PRIMARY KEY NOT NULL,
    PTYPE_NAME VARCHAR2(50)
);


-- 지도검색기록
CREATE TABLE SEARCH_HISTORY (
		SEARCH_CODE INT PRIMARY KEY NOT NULL,
		SEARCH_KEYWORD VARCHAR2(255),
		SEARCH_TIME TIMESTAMP
);

COMMIT;