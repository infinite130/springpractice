-- 문자
CREATE TABLE SMS (
    SMS_CODE INT PRIMARY KEY NOT NULL,
    SMS_CONTENT CLOB,
    SEND_DATE DATE,
    STATUS INT,
    MEM_CODE INT NOT NULL,
    FOREIGN KEY (MEM_CODE) REFERENCES TB_MEMBER(MEM_CODE)
);

-- 채팅상담
CREATE TABLE CHAT (
    CHAT_CODE INT PRIMARY KEY NOT NULL,
    CATEGORY_CODE INT NOT NULL,
    MEM_CODE INT NOT NULL,
    CHAT_CONTENT CLOB,
    CHAT_DATE DATE,
    STATUS INT,
    FOREIGN KEY (MEM_CODE) REFERENCES TB_MEMBER(MEM_CODE),
    FOREIGN KEY (CATEGORY_CODE) REFERENCES CHAT_CATEGORY(CATEGORY_CODE)
);

-- 상담카테고리
CREATE TABLE CHAT_CATEGORY (
    CATEGORY_CODE INT PRIMARY KEY NOT NULL,
    CATEGORY_NAME VARCHAR2(50),
    STATUS INT
);

COMMIT;